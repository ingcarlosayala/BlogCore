@page
@using BlogCore.Utilidades
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>
<div class="container-xl">

    <div class="row">
        <div class="col-md-6 offset-md-3 shadow rounded p-3 bg-white">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Nombre" class="form-control" autocomplete="username" aria-required="true" placeholder="Nombre de usuario" />
                    <label asp-for="Input.Nombre"></label>
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Ciudad" class="form-control" autocomplete="username" aria-required="true" placeholder="Ciudad" />
                    <label asp-for="Input.Ciudad"></label>
                    <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Pais" class="form-control" autocomplete="username" aria-required="true" placeholder="Pais" />
                    <label asp-for="Input.Pais"></label>
                    <span asp-validation-for="Input.Pais" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Direccion" class="form-control" autocomplete="username" aria-required="true" placeholder="Direccion" />
                    <label asp-for="Input.Direccion"></label>
                    <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @if (User.IsInRole(DS.Admin))
                    {
                        <div class="row">
                            <label class="form-label">Roles</label>
                            <div class="col-12 d-flex gap-2">
                                <input type="radio" name="radRole" class="form-check" value="@DS.Admin" />@DS.Admin
                                <input type="radio" name="radRole" class="form-check" value="@DS.Cliente" />@DS.Cliente
                            </div>
                        </div>
                    }
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Registrarse</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
