@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <div class="row mt-5">
        <div class="col-12 col-lg-10 offset-lg-1">
            <div class="card shadow rounded">
                <div class="card-header d-flex justify-content-between align-items-center bg-success p-5 p-md-0 p-md-2 rounded">
                    <h5 class="text-center text-white text-uppercase">@Model.Nombre</h5>
                    <p class="text-white fw-bold">@Model.FechaCreacion.ToString("dd/M/yyyy")</p>
                </div>
                <div class="row d-flex justify-content-center justify-content-md-start align-items-center mx-2 mx-md-0">
                    <div class="col-6 col-md-4 text-center">
                        <a asp-action="Index" class="btn btn-outline-dark mt-4"> <i class="bi bi-arrow-return-left"></i> Regresar</a>
                        <img src="@Model.ImagenUrl" class="card-img w-100" />
                    </div>
                    <div class="col-6">
                        <h5><strong>Descrpcion:</strong> 
                            <span class="text-muted"> @Model.Descripcion</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

