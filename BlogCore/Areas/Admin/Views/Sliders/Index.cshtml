@model IEnumerable<BlogCore.Models.Slider>
@{
    ViewData["Title"] = "Lista de Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center mt-4 fw-bold">Lista de Slider</h1>

    <div class="d-md-flex justify-content-end">
        <a asp-action="Crear" class="btn btn-outline-primary mb-3"> <i class="bi bi-plus-circle"></i> Nuevo Slider</a>
    </div>

    <div class="row">
        <div class="col-12 shadow p-2 rounded">
            <div class="table-responsive">
                <table id="tblDatos" class="table table-striped w-100 shadow">
                    <thead>
                        <tr>
                            <th class="w-50">@Html.DisplayNameFor(c => c.Nombre)</th>
                            <th class="w-25">@Html.DisplayNameFor(c => c.Estado)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/slider.js"></script>
}


