@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Actualizar Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="fw-bold text-center my-4">Actualizar Slider</h1>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <input hidden asp-for="Id" />

        <div class="row mx-2 mx-md-0">
            <div class="col-12 col-md-6 p-3 shadow bg-white rounded mb-3 mb-md-0 border border-0 border-5 border-top border-primary">
                <div class="mb-2">
                    <label asp-for="Nombre" class="form-label fw-semibold text-uppercase"></label>
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre de Slider" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Estado" class="form-label fw-semibold text-uppercase"></label>
                    <select asp-for="Estado" class="form-select">
                        <option selected disabled>Seleccione</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="ImagenUrl" class="form-label fw-semibold text-uppercase"></label>
                    <input asp-for="ImagenUrl" class="form-control" type="file" name="files" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary"> <i class="bi bi-arrow-return-left"></i> Atras</a>
                </div>
            </div>

            <div class="col-12 col-md-5 offset-md-1 text-center text-md-start">
                <img src="@Model.ImagenUrl" class="img-fluid shadow rounded border border-0 border-5 border-top border-primary" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

